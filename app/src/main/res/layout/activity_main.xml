<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/update_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Update Profile"
        android:textAllCaps="false"
        android:textSize="17sp" />

    <Button
        android:id="@+id/add_events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_profile"
        android:layout_centerHorizontal="true"
        android:text="Events"
        android:textAllCaps="false"
        android:textSize="17sp" />

    <Button
        android:id="@+id/push_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_events"
        android:layout_centerHorizontal="true"
        android:text="Push Notification"
        android:textAllCaps="false"
        android:textSize="17sp" />

    <Button
        android:id="@+id/inapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/push_notification"
        android:layout_centerHorizontal="true"
        android:text="In App Notification"
        android:textAllCaps="false"
        android:textSize="17sp" />

    <Button
        android:id="@+id/app_inbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inapp"
        android:layout_centerHorizontal="true"
        android:text="App Inbox"
        android:textAllCaps="false"
        android:textSize="17sp" />

    <Button
        android:id="@+id/native_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_inbox"
        android:layout_centerHorizontal="true"
        android:text="Native Display"
        android:textAllCaps="false"
        android:textSize="17sp" />

    <Button
        android:id="@+id/geofence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/native_display"
        android:layout_centerHorizontal="true"
        android:text="Geofence"
        android:textAllCaps="false"
        android:textSize="17sp" />


    <Button
        android:id="@+id/custom_app_inbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/geofence"
        android:layout_centerHorizontal="true"
        android:text="Custom App Inbox"
        android:textAllCaps="false"
        android:textSize="17sp" />

</RelativeLayout>