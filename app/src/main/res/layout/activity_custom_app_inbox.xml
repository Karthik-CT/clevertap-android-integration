<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".CustomAppInboxActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Messages"
        android:layout_marginRight="5dp"
        android:id="@+id/custom_app_inbox_get_messagesbtn"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Raise Event"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_toRightOf="@id/custom_app_inbox_get_messagesbtn"
        android:id="@+id/custom_app_inbox_raise_event"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/custom_app_inbox_rv"
        android:layout_below="@id/custom_app_inbox_get_messagesbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>